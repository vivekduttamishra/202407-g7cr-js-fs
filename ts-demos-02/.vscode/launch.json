{
    "version": "0.2.0",
    "configurations": [

      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/ts-mocha",
        "args": [
          
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/test/**/*.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  